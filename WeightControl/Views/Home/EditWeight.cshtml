
@{
    ViewBag.Title = "EditWeight";
    Layout = "~/Views/Shared/_ShellPage.cshtml";
}

<script src="~/Scripts/angular-pickadate.js"></script>
<link href="~/Styles/angular-pickadate.css" rel="stylesheet" />
<script src="~/AngularControllers/EditWeightController.js"></script>
<div ng-controller="EditWeightController">
    <div class="row">
        <div class="col-lg-6">
            <h2>Edit your Weight</h2>
            <form>
                <div class="form-group">
                    <label for="weightInput">Gewicht eingeben</label>
                    <input type="text" class="form-control" id="weightInput" placeholder="Text eingeben" ng-model="weight">
                    <div class="label label-danger" ng-show="weightisInvalid">Bitte eine Zahl eingeben</div><br />
                    <button ng-click="saveWeight()" ng-disabled="weightExistsOnDate || weightisInvalid" class="btn btn-success">Save</button>
                    <button ng-click="editWeight()" ng-disabled="!weightExistsOnDate" class="btn btn-warning">Edit</button>
                </div>
            </form>
        </div>
        <div class="col-lg-6">
            
            <div pickadate ng-model="date"></div>

            {{date}}
            <br/>
            {{weight}}

        </div>
    </div>
</div>


